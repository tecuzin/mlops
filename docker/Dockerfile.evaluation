FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends gcc g++ && rm -rf /var/lib/apt/lists/*

RUN pip install --no-cache-dir \
    httpx>=0.27 \
    mlflow>=2.15 \
    ragas>=0.2 \
    datasets>=3.0 \
    torch>=2.4 \
    langchain-mistralai>=0.2 \
    transformers>=4.44 \
    peft>=0.12 \
    accelerate>=0.34 \
    sentencepiece>=0.2 \
    protobuf>=5.28 \
    psutil>=5.9

COPY workers/__init__.py /app/workers/__init__.py
COPY workers/evaluation/ /app/workers/evaluation/
COPY data/ /app/data/

CMD ["python", "-m", "workers.evaluation.worker"]
