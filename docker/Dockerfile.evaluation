FROM python:3.11-slim

WORKDIR /app

RUN pip install --no-cache-dir \
    httpx>=0.27 \
    mlflow>=2.15 \
    ragas>=0.2 \
    datasets>=3.0 \
    torch>=2.4 \
    langchain-mistralai>=0.2

COPY workers/evaluation/ /app/workers/evaluation/
COPY data/ /app/data/

CMD ["python", "-m", "workers.evaluation.worker"]
