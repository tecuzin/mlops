FROM python:3.11-slim

WORKDIR /app

RUN pip install --no-cache-dir \
    fastapi>=0.115 \
    uvicorn[standard]>=0.32 \
    sqlalchemy>=2.0 \
    psycopg2-binary>=2.9 \
    pydantic>=2.9 \
    httpx>=0.27

COPY db/ /app/db/
COPY api/ /app/api/
COPY data/ /app/data/

EXPOSE 8000

CMD ["sh", "-c", "python -m db.init_db && uvicorn api.main:app --host 0.0.0.0 --port 8000"]
